{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block inline_css %}
<style>
    .btn-color{
        background-color: #0e1c36;
        color: #fff;
    }

    .profile-image-pic{
        height: 200px;
        width: 200px;
        object-fit: cover;
    }

    .cardbody-color{
        background-color: #ebf2fa;
    }

    a {
        text-decoration: none;
    }
</style>
{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Register form</h2>
            <div class="card my-5">

            {# <form class="card-body cardbody-color p-lg-5" method="post"> #}
            {{ form_start(registrationForm, { attr: { class: "card-body cardbody-color p-lg-5" }}) }}

                <div class="text-center">
                    <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" 
                        class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                        width="200px" alt="profile">
                </div>

                {{ form_errors(registrationForm) }}

                <div class="mb-3">
                    {# <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus> #}
                    {{ form_row(registrationForm.username, { attr: { class: 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {# <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required> #}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        attr: { class: 'form-control'}
                    }) }}
                </div>
                <div class="mb-3">
                    {{ field_label(registrationForm.agreeTerms) }}
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {# {{ form_row(registrationForm.agreeTerms, {
                        attr: { class: 'form-check-input' }
                    }) }} #}
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-color px-5 mb-5 w-100">Register</button>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
